@model MMS.Data.Models.Movie


<partial name="_BreadCrumbs" model=@(new []
{
    ("/", "Home"), ("/Movie", "Details"), ("","Delete")

})>
    <!--Breadcrumbs added for a nicer user experience! -->


    <h4>Are you sure you want to delete this movie?</h4>
    <div>
        <hr />
        <dl class="row">

            <dt class="col-sm-2">
                <!---will render the DisplayTemplate that matches the property's type. -->
                @Html.DisplayNameFor(model => model.Title)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Title)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Director)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Director)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Year)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Year)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Duration)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Duration)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Budget)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Budget)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PosterUrl)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PosterUrl)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Genre)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Genre)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Cast)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Cast)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Plot)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Plot)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Rating)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Rating)
            </dd>
        </dl>



        <form asp-controller="Movie" asp-action="DeleteConfirm" type="post">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Confirm" class="btn btn-danger" />
            <a class="btn btn-secondary" asp-controller="Movie" asp-action="Index">Cancel</a>

            @*<The asp-action attribute value represents the controller action name,
                asp-Controller is the controller it will use for the action*@
        </form>
    </div>

