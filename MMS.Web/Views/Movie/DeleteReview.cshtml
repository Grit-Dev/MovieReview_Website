@model MMS.Data.Models.Review

<partial name="_BreadCrumbs" model=@(new []
{
    ("/", "Home"), ("/Movie", "Movies"), ("/Movie","Details"), ("","ReviewDetails")

})>

    <!------ Partial created here for the breadcrumbs-->

    <h4>Are you sure you want to delete this Review?</h4>


    <div>

        <!------- This is the exact same code for the views/Review/Delete cshtml. 
           I have done this so the movie controller once the user interacts to delete the review
            they can come back to the Movie Index. But in the views/review/Delete they can delete and come back
            to the review index. Just added extra functionality and ease for deletion-->

        <dl class="card shadow rounded mt-4 p-3">
            <!-------------->
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CreatedOn)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CreatedOn)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Comment)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Comment)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Rating)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Rating)
            </dd>

            <!-------- Removed the Id as the user does not need to see that-->

        </dl>
        <form asp-controller="Movie" asp-action="DeleteReviewConfirm" type="post">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Confirm" class="btn btn-danger" />
            <a class="btn btn-secondary" asp-controller="Movie" asp-action="Index">Cancel</a>

            <!------- Contoller is in the movie controller and using the IactionResult DeleteReviewConfirm!
    If the user cancels, It will then take them back to the movie index! -->
        </form>
    </div>

